[user]
    name = ltang
    email = ltang@microstrategy.com
[core]
	autocrlf = false
	whitespace = cr-at-eol
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dfig = diff --ignore-space-at-eol
    lg = log -p
    cm = commit -m
    ui = update-index
    lf = log --pretty=format:"%h|%s"
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
